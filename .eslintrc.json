{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "next/core-web-vitals",
    "next",
    "plugin:prettier/recommended"
  ],
  "overrides": [
    {
      "env": {
        "node": true
      },
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "sourceType": "script"
      }
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "react", "@stylistic"],
  "rules": {
    "@stylistic/linebreak-style": ["off", "unix"],
    "@stylistic/indent": ["off", 2],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "prettier/prettier": "warn",
    "react/jsx-no-literals": ["off", { "noStrings": true }]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
